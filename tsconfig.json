{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "lib": [
      "es7",
      "dom",
      "es2017.object",
      "es2015.iterable",
      "ScriptHost"
    ]
  },
  "files": [
    "src/main.ts",
    "src/vendor.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
